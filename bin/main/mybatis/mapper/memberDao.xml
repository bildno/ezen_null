<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace = "com.study.springboot.dao.ImemberDao">
    
	<select id="login" resultType="_int">
		select count(*) from member where member_id = #{param1} and member_pw = #{param2} 
	</select>
    
    <!-- 로그인	- -->
    
    <select id="mypageload" resultType="com.study.springboot.dto.memberDto">
    	select * from member where member_id = #{param1}
    </select>
    
    <select id="idfind" resultType="String">
    	select member_id from member where member_name = #{param1} and member_phone = #{param2}
    </select>
    
    
    
    
    <!--  마이페이지 -->
    

    


    </mapper>