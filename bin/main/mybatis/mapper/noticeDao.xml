<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.study.springboot.dao.InoticeDao">

<select id="notice" resultType="com.study.springboot.dto.noticeDto">
	select * from notice
</select>

<select id="noticepage" resultType="com.study.springboot.dto.noticeDto">
		SELECT * FROM
	    (
	        SELECT 
	            ROWNUM AS RNUM, notice.*
	        FROM
	            notice
	        ORDER BY notice_date desc
	    )
		WHERE RNUM BETWEEN #{param1} AND #{param2}
	</select>
<insert id="notice_write" parameterType="com.study.springboot.dto.noticeDto">
		insert into notice values(notice_idx.nextval,#{notice_title},#{notice_content},#{notice_contents_number},sysdate)
	</insert>
</mapper>